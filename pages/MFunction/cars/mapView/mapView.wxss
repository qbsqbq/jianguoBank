/* pages/MFunction/cars/mapView/mapView.wxss */

.map_container{
  position: absolute;
  top: 0;
  bottom: 0px;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 400px;
  background: #fff;
  padding: 0 15px;
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}

.show{
  display: block;
}
.hide{
  display: none;
}

/**出行方式**/
.gotoView{
  /* display: inline-block; */
  float: left;
  width:100%;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: rgb(10, 10, 10);
  
}
.gotobyDriver,.gotobywalk{
  width: 49%;
  text-align: center;
  display: inline-block;
  height: 44px;
}
.gotobyDriver{
  background-color: #32CD32;
}
.gotobywalk{
  background-color: #1E90FF;
  margin-left: 5px;
}
